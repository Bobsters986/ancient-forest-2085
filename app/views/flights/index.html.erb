<h3>All Flights</h3>

<section id = "flight_info">
  <% @flights.each do |flight| %>
    <p><strong>Flight #</strong><%= flight.number %>, Airline: <%= flight.airline.name %></p>
    <p><strong>Passengers:</strong></p>
    <ul id = "passengers-<%= flight.id %>">
      <% flight.passengers.each do |passenger| %>
        <li><%= passenger.name %> <%= button_to "Remove #{passenger.name}", "/flights/#{flight.id}/passengers/#{passenger.id}", method: :delete %></li>
      <% end %>
    </ul>
    <br>
  <% end %>
</section>